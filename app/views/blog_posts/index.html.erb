<div class="flex flex-row">
  <div class="hidden lg:flex lg:basis-1/4"></div>
  <div class="basis-full lg:basis-2/4" >
    <% @blog_posts.each do |blog_post| %>

      <div class="grow bg-white rounded-xl overflow-hidden lg:max-w-2xl lg:mx-auto mt-5 mx-5">
        <div class="lg:flex">
          <div class="lg:shrink-0">
            <% if blog_post.cover_image.present? %>
              <%= image_tag blog_post.cover_image.variant(resize_to_fill: [400, 400, crop: :attention]), class: "h-48 w-full object-cover lg:h-full lg:w-48 my-0" %>
            <%end %>
          </div>
          <div class="p-8">
            <%= link_to blog_post.title, blog_post, class: "text-2xl uppercase underline decoration-purple-600 hover:decoration-purple-200 underline-offset-8 font-bold"%>
            <% if blog_post.draft? %>
              <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
            <% elsif blog_post.scheduled?%>
              <div class="p-2 rounded bg-blue-100 text-blue-900">Scheduled</div>
            <% end %>
            <div class="font-light text-sm mt-3">
              <% if blog_post.published? %>
                <%= blog_post.published_at.to_date %>
              <% end %>
            </div>
            <p class="mt-2 text-slate-500"><%= truncate(blog_post.content.to_plain_text, length: 200, separator: ' ') %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="hidden lg:flex lg:basis-1/4"><%= render partial: "landing_pages/about_me" %></div>
</div>

  <% if @pagy.count > @pagy.items %>
    <div class="my-16">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
