
<div class="prose mx-8 sm:mx-auto">
  <h1>My Blog Posts</h1>
  <% @blog_posts.each do |blog_post| %>
    <div class="bg-white rounded p-10 mt-10">
      <%= image_tag blog_post.cover_image if blog_post.cover_image.present? %>
      <h3> <%= link_to blog_post.title, blog_post %> </h3>
      <% if blog_post.draft? %>
        <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
      <% elsif blog_post.scheduled?%>
        <div class="p-2 rounded bg-blue-100 text-blue-900">Scheduled</div>
      <% end %>
      <div class="trix-content">
        <%= truncate(blog_post.content.to_plain_text, length: 200, separator: ' ') %>
      </div>
    </div>
  <% end %>

  <% if @pagy.count > @pagy.items %>
    <div class="my-16">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
