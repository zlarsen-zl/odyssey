<!-- component -->
<div class="max-w-screen-xl mx-auto">

  <main class="mt-5">

    <div class="mb-4 md:mb-0 w-full max-w-screen-md mx-auto relative" style="height: 24em;">
      <div class="absolute left-0 bottom-0 w-full h-full z-10"
           style="background-image: linear-gradient(180deg,transparent,rgba(0,0,0,.7));"></div>
      <div class="flex justify-center">
        <% if @blog_post.cover_image.present? %>
          <%= image_tag @blog_post.cover_image.variant(resize_to_fill: [400, 400, crop: :attention]), class: "absolute left-0 top-0 w-full h-full z-0 object-cover" %>
        <% end %>
      </div>
      <div class="p-4 absolute bottom-0 left-0 z-20">
        <a href="#"
           class="px-4 py-1 bg-black text-gray-200 inline-flex items-center justify-center mb-2"><%= @blog_post.tag %></a>
        <h2 class="text-4xl font-semibold text-gray-100 leading-tight">
          <%= @blog_post.title %>
        </h2>
        <div class="flex mt-3">
          <img src="https://randomuser.me/api/portraits/men/97.jpg"
               class="h-10 w-10 rounded-full mr-2 object-cover" />
          <div>
            <p class="font-semibold text-gray-400 text-xs">
            <div class="font-light text-sm mt-3">
              <% if @blog_post.published? %>
                <%= @blog_post.published_at.to_date %>
              <% end %>
            </div>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="px-4 lg:px-0 mt-12 text-gray-700 max-w-screen-md mx-auto text-lg leading-relaxed">
      <p class="pb-6"><%= @blog_post.content %></p>
      <% if user_signed_in? %>
        <button class="rounded-xl bg-gradient-to-br from-[#6025F5] to-[#FF5555] px-5 py-3 text-base font-medium text-white transition duration-200 hover:shadow-lg hover:shadow-[#6025F5]/50 mt-10 mb-5">
          <%= link_to "Edit", edit_blog_post_path(@blog_post) %>
        </button>
      <% end %>
    </div>
  </main>
  <!-- main ends here -->
