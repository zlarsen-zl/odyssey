
<div class="prose mx-8 sm:mx-auto bg-white mt-10 p-10 rounded">
  <%= image_tag @blog_post.cover_image if @blog_post.cover_image.present? %>
  <div class="text-2xl uppercase font-bold">
     <%= @blog_post.title %>
   </div>
  <div class="font-light text-sm mt-3">
    <% if @blog_post.published? %>
      <%= @blog_post.published_at.to_date %>
    <% end %>
  </div>
  <div class="trix-content">
    <%= @blog_post.content %>
  </div>
  <div>
    <%= link_to "Edit", edit_blog_post_path(@blog_post) if user_signed_in? %>
  </div>
</div>

